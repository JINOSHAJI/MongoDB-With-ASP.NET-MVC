@model RealEstate.Model.Rentals.Rental

@{
    ViewBag.Title = "Increment Price";
}

<h2>Increment Price</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">Description</label>
            <div class="col-md-10">
                @Model.Description
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Old Price</label>
            <div class="col-md-10">
                @Model.Price
            </div>
        </div>

        <div class="form-group">
            @Html.Label("AdjustPriceUsingModifications", "Adjust Price", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("NewPrice",100, new { @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Reason", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextArea("Reason","Incremental update",new { @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adjust" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Rentals", "Index")
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
